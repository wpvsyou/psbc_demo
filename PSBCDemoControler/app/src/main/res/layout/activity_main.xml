<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" android:gravity="center_horizontal"
    android:paddingTop="@dimen/activity_vertical_margin" android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="PSBC Demo Controler" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/text_view"/>

    <com.wp.psbcdemocontroler.EditTextWithDelete
        android:layout_marginTop="10dip"
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="40dip" />

    <com.wp.psbcdemocontroler.EditTextWithDelete
        android:layout_marginTop="10dip"
        android:id="@+id/pass_word"
        android:layout_width="match_parent"
        android:layout_height="40dip" />

    <LinearLayout
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/create_btn"
            style="@style/PSBC_Button_bkg"
            android:text="Create new account"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/delete_btn"
            style="@style/PSBC_Button_bkg"
            android:text="Delete this account"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/freeze_btn"
            style="@style/PSBC_Button_bkg"
            android:text="Freeze this account"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/unfreeze_btn"
            style="@style/PSBC_Button_bkg"
            android:text="Unfreeze this account"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/lock_btn"
            style="@style/PSBC_Button_bkg"
            android:text="Lock this client"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/unlock_btn"
            style="@style/PSBC_Button_bkg"
            android:text="Unlock this client"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
