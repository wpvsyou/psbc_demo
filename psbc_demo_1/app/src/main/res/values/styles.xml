<resources>
     <style name="MDMClientEditWithDelete">
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">7dp</item>
    </style>

    <style name="SettingActivityStyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/SettingActivityStyle.ActionBar</item>
    </style>

    <style name="SendDugActivityStyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SettingActivityStyle.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/SettingActivityStyle.ActionBar.TitleStyle</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="android:background">@drawable/actionbar_bg_mdm32</item>
    </style>

    <style name="SettingActivityStyle.ActionBar.TitleStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="line_style">
        <item name="android:background">@color/gray</item>
    </style>


</resources>