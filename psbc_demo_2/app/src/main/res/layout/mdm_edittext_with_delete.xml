<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background_view"
    style="@style/MDMClientEditWithDelete"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edittext_background">

    <ImageView
        android:id="@+id/mdm_edit_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:src="@drawable/edittext_with_delete_deletebtn_selector" />

    <EditText
        android:id="@+id/mdm_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/mdm_edit_delete"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/edittext_with_delete_edit"
        android:textSize="@dimen/large_textsize" />
</RelativeLayout>